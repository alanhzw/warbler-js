{
  "git": {
    "commitMessage": "chore(release): v${version}",
    "push": true,
    "commit": true,
    "tag": true,
    "requireCommits": false,
    "requireCleanWorkingDir": false
  },
  "github": {
    "release": true,
    "draft": false
  },
  "npm": {
    "publish": false,
    "ignoreVersion": false
  },
  "hooks": {
    "after:release": "echo Successfully released ${name} v${version} to ${repo.repository}."
  }
}
